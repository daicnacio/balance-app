<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dafegroup.balanceapp.TransactionActivity">

    <ImageButton
        android:id="@+id/ibBack"
        android:background="@drawable/square"
        android:layout_width="40dp"
        android:layout_height="38dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@mipmap/ic_navigate_before_black_24dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivUserImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="@+id/horizontalScrollView"
        app:layout_constraintRight_toRightOf="@+id/horizontalScrollView"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.497"
        android:layout_marginTop="131dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivUserImage"
        app:layout_constraintRight_toRightOf="@+id/ivUserImage"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/ivUserImage"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.595" />

    <HorizontalScrollView
        android:layout_width="231dp"
        android:layout_height="69dp"
        android:background="@color/white"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/horizontalScrollView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="207dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </HorizontalScrollView>
</android.support.constraint.ConstraintLayout>
